<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="vertical">

        <com.example.hzj.EyeOpener.widget.JumpShowTextView
            android:id="@+id/detail_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="6dp"
            android:layout_marginTop="5dp"
            app:IsBold="true"
            app:textColor="@color/colorWhite"
            app:textSize="48px" />

        <com.example.hzj.EyeOpener.widget.JumpShowTextView
            android:id="@+id/detail_tag"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="10dp"
            app:textSize="35px" />

        <com.example.hzj.EyeOpener.widget.JumpShowTextView
            android:id="@+id/detail_describe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_marginStart="6dp"
            app:textColor="@color/colorWhite"
            app:textSize="35px" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_likenum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:drawableLeft="@drawable/like_select"
                android:drawablePadding="10dp"
                android:gravity="center"
                android:text="66633"
                android:textColor="@color/colorWhite"
                android:textSize="35px" />

            <TextView
                android:id="@+id/tv_sharenum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:drawableLeft="@mipmap/ic_action_share_without_padding"
                android:drawablePadding="10dp"
                android:gravity="center"
                android:text="24433"
                android:textColor="@color/colorWhite"
                android:textSize="35px" />

            <TextView
                android:id="@+id/tv_reply"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:drawableLeft="@mipmap/ic_action_reply_without_padding"
                android:drawablePadding="10dp"
                android:gravity="center"
                android:text="23333"
                android:textColor="@color/colorWhite"
                android:textSize="35px" />

            <TextView
                android:id="@+id/tv_download"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="30dp"
                android:drawableLeft="@mipmap/ic_action_offline_without_padding"
                android:drawablePadding="10dp"
                android:gravity="center"
                android:text="缓存"
                android:textColor="@color/colorWhite"
                android:textSize="35px" />
        </LinearLayout>


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="5dp"
        android:background="#55ffffff" />

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_item_author"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="12dp"
            android:src="@mipmap/pgc_default_avatar" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:layout_marginTop="10dp"
            android:layout_toLeftOf="@id/tv_author_follow"
            android:layout_toRightOf="@id/iv_item_author"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_item_author_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="5dp"
                android:textColor="@color/colorWhite"
                android:textSize="40px"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_item_author_dis"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:paddingStart="5dp"
                android:singleLine="true"
                android:textColor="@color/colorWhite"
                android:textSize="35px" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_author_follow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="9dp"
            android:layout_marginRight="12dp"
            android:background="@drawable/rect_radius"
            android:padding="5dp"
            android:text="+关注"
            android:textColor="@color/colorGrey"
            android:textSize="30px"
            android:textStyle="bold" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#55ffffff" />


</LinearLayout>