<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="15dp">
    
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="40sp"
        android:text="@string/app_name"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="8dp"
        android:textColor="@color/colorWhite"
        android:id="@+id/detail_title"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textSize="35dp"
        android:textColor="@color/colorWhite"
        android:layout_marginBottom="15dp"
        android:id="@+id/detail_tag"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textColor="@color/colorWhite"
        android:id="@+id/detail_describe"
        android:layout_marginBottom="20dp"
        android:textSize="35dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="30dp"
            android:text="666"
            android:textSize="35px"
            android:drawablePadding="10dp"
            android:gravity="center"
            android:drawableLeft="@mipmap/ic_action_favorites_without_padding"
            android:textColor="@color/colorWhite"
            android:id="@+id/tv_likenum"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="30dp"
            android:text="244"
            android:textSize="35px"
            android:drawablePadding="10dp"
            android:gravity="center"
            android:drawableLeft="@mipmap/ic_action_share_without_padding"
            android:textColor="@color/colorWhite"
            android:id="@+id/tv_sharenum"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorWhite"
            android:text="233"
            android:textSize="35px"
            android:layout_marginRight="30dp"
            android:gravity="center"
            android:drawablePadding="10dp"
            android:drawableLeft="@mipmap/ic_action_reply_without_padding"
            android:id="@+id/tv_reply"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="35px"
            android:textColor="@color/colorWhite"
            android:text="缓存"
            android:layout_marginRight="30dp"
            android:gravity="center"
            android:drawablePadding="10dp"
            android:drawableLeft="@mipmap/ic_action_offline_without_padding"
            android:id="@+id/tv_download"/>
    </LinearLayout>


</LinearLayout>