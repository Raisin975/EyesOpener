<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/rl_reply"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp">
        <ImageView
            android:id="@+id/iv_reply_avatar"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@mipmap/ic_author"
            android:layout_alignParentStart="true"/>
        <TextView
            android:id="@+id/tv_replylike"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorWhite"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="15dp"
            android:gravity="center_vertical"
            android:textSize="40px"
            android:drawablePadding="2dp"
            android:drawableRight="@mipmap/ic_action_like"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginEnd="15dp"
            android:layout_marginStart="60dp">
            <TextView
                android:id="@+id/tv_replyname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="45px"
                android:layout_marginEnd="40dp"
                android:singleLine="true"
                android:gravity="start"
                android:textStyle="bold"
                android:textColor="@color/colorWhite"/>
            <TextView
                android:id="@+id/tv_replyparent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#aaffffff"
                android:textSize="38px"
                android:singleLine="true"
                android:layout_marginEnd="15dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:gravity="start"/>
            <TextView
                android:id="@+id/tv_replymessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="40px"
                android:textColor="@color/colorWhite"
                android:gravity="start"/>
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_parentreply"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginStart="70dp"
        android:layout_marginEnd="15dp">
        <ImageView
            android:id="@+id/iv_parentreply_avatar"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@mipmap/ic_author"
            android:layout_marginStart="7dp"
            android:layout_marginTop="7dp"
            android:layout_alignParentStart="true"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="50dp"
            android:layout_marginTop="7dp">
            <TextView
                android:id="@+id/tv_parentreplyname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorWhite"
                android:textStyle="bold"
                android:textSize="42px"/>
            <TextView
                android:id="@+id/tv_parentreplymessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorWhite"
                android:textSize="37px"/>
        </LinearLayout>
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_replytime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="70dp"
        android:layout_marginBottom="7dp"
        android:textSize="40px"
        android:textColor="#aaffffff"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#55ffffff"/>


</LinearLayout>